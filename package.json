    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-storybook": "^0.12.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "playwright": "^1.51.1",
    "prettier": "^3.5.3",
    "storybook": "^8.6.12",
    "typescript": "^5",
    "vitest": "^3.1.1"
  },
  "packageManager": "yarn@4.9.1",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
